<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('include/headerImport.ejs')%>
        <link rel="stylesheet" href="/stylesheets/player.css" type="text/css">
        <title>
            <%= title%>
        </title>
</head>

<body>
    <%- include('include/navbar.ejs')%>
        <div class="bg-img overlay"
            style="background-image: url('https://themewagon.github.io/soccer/images/bg_3.jpg');">
            <div class="container">
                <% if(error_msg!='' ){%>
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <%= error_msg %>
                    </div>
                    <% } %>
                        <div class="back">
                            <a href="/auth/account" class="btn btn-success mt-2""><i class=" fa-solid
                                fa-chevron-left"></i></a>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <form method="post" class="box">
                                    <div class="mb-3">
                                        <label class="label">Current Password</label>
                                        <input type="text" class="form-control" name="password"
                                            placeholder="Current password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="label">New Password</label>
                                        <input class="form-control" type="text" name="newPassword"
                                            placeholder="New password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="label">Confirm New Password</label>
                                        <input class="form-control" type="text" name="confirmNewPassword"
                                            placeholder="Confirm password" required>
                                    </div>
                                    <button type="submit" class="btn btn-success">Change Password</button>
                                </form>
                            </div>
                        </div>
            </div>
        </div>
</body>

</html>
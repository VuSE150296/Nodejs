<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('include/headerImport.ejs')%>
        <link rel="stylesheet" href="/stylesheets/auth.css">
        <title>
            <%=title%>
        </title>
</head>

<body>
    <div class="bg-img overlay" style="background-image: url('https://themewagon.github.io/soccer/images/bg_3.jpg');">
        <div class="container">
            <div class="row">
                <div class="alert-group">
                    <% if(typeof errors!='undefined' ){%>
                        <% errors.forEach(function(error){%>
                            <div class="alert alert-warning alert-dismissible" role="alert">
                                <%= error.msg %>
                            </div>
                            <% }); %>
                                <% } %>
                </div>
                <div class="col-lg-6 ml-auto">
                    <div class="choose-form">
                        <h3 class="btn-link"><a href="/auth">Sign In</a></h3>
                        <h3 class="active btn-link"><a href="/auth/register">Sign Up</a></h3>
                    </div>
                    <div class="form">


                        <form method="post" class="box">
                            <div class="mb-3">
                                <label class="label">Name</label>
                                <input type="text" class="form-control" name="name" placeholder="EX: Thai Quoc Toan">
                            </div>
                            <div class="mb-3">
                                <label class="label">Year of birth</label>
                                <input type="number" class="form-control" name="yob" placeholder="EX: 2000">
                            </div>
                            <div class="mb-3">
                                <label class="label">Username</label>
                                <input type="text" class="form-control" name="username" placeholder="Username">
                            </div>
                            <div class="mb-3">
                                <label class="label">Password</label>
                                <input type="password" class="form-control" name="password"
                                    placeholder="At least 6 character">
                            </div>
                            <div class="field is-grouped">
                                <div class="control">
                                    <button class="btn btn-success is-link">Sign Up</button>
                                </div>
                                <div class="control">
                                    <p class="small fw-bold mt-2 pt-1 mb-0">Already accounted! <a class="link-danger"
                                            href="/auth">Sign in</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>